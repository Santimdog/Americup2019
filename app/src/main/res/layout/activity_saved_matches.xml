<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/americupTitleSavedMatches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="@dimen/leftAmericup"
        android:layout_marginTop="@dimen/topAmericup"
        android:text="@string/AmericupBanner"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_dialog_dialer" />

    <ImageView
        android:id="@+id/flagView1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/flagcolombia"
        tools:layout_editor_absoluteX="321dp"
        tools:layout_editor_absoluteY="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnMenu"
        android:background="@color/White"/>

    <ImageView
        android:id="@+id/flagView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/flagargentina"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnMenu"
        android:background="@color/White"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:text="Colombia"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/flagView1"
        app:layout_constraintTop_toBottomOf="@id/btnMenu"
        android:background="@color/White"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="2"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/textView2"
        app:layout_constraintTop_toBottomOf="@id/btnMenu"
        android:textAlignment="center"
        android:background="@color/White"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="0"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/textView5"
        app:layout_constraintTop_toBottomOf="@id/btnMenu"
        android:textAlignment="center"
        android:background="@color/White"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:text="Argentina"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/flagView2"
        app:layout_constraintTop_toBottomOf="@id/btnMenu"
        android:background="@color/White"/>
</android.support.constraint.ConstraintLayout>